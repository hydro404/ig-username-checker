<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IG Username Checker</title>
    <!-- Bootstrap cdn  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    
</head>
<body>
    
    <div class="container" style="min-height: 100vh;">
    
        <div class="row pt-5">
          <h1 class="text-center">IG Username Checker</h1>

          <div class="col-12 mt-2">
            <div class="form-floating">
              <textarea id="input" cols="50" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 300px"></textarea>
              <label for="floatingTextarea2">Username List</label>
              <div class="invalid-feedback">Please input your username list</div>
            </div>
          </div>
          
          <div class="col-12 text-center mt-4">
            <button class="btn btn-primary" id="check-usernames">Check</button>
          </div>
        </div>

        <div class="row pt-5 mt-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            Available
                        </h2>
                        <div>
                            <button class="btn btn-primary" data-bs-toggle="collapse" data-bs-target="#availableCollapse" aria-expanded="true" aria-controls="availableCollapse">
                                Collapse
                            </button>
                            <button class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#availableCollapse" aria-expanded="false" aria-controls="availableCollapse">
                                Expand
                            </button>
                        </div>
                    </div>
                    <div id="availableCollapse" class="collapse show">
                        <div class="card-body">
                            <ul id="available" class="list-group text-center" style="max-height: 300px; overflow-y: auto;">
                                <!-- Available usernames will be appended here -->
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            Already Taken
                        </h2>
                        <div>
                            <button class="btn btn-primary" data-bs-toggle="collapse" data-bs-target="#takenCollapse" aria-expanded="true" aria-controls="takenCollapse">
                                Collapse
                            </button>
                            <button class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#takenCollapse" aria-expanded="false" aria-controls="takenCollapse">
                                Expand
                            </button>
                        </div>
                    </div>
                    <div id="takenCollapse" class="collapse show">
                        <div class="card-body">
                            <ul id="already-taken" class="list-group text-center" style="max-height: 300px; overflow-y: auto;">
                                <!-- Already taken usernames will be appended here -->
                            </ul>
                        </div>
                    </div>
                </div>
            </div> 
        </div>
        
        
      </div>

      <script>
        document.getElementById('check-usernames').addEventListener('click', async function (e) {
            const inputElement = document.getElementById('input');
            var usernameListText = document.getElementById('input').value; // Get the textarea content
            const usernames = usernameListText.trim().split('\n'); // Split the content by new lines to get an array of usernames
            const available = [];
            const alreadyTaken = [];

            // Process each username
            for (const username of usernames) {
                // Use await to get the actual response
                const response = await fetch('/instagram', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ username: username.trim() }) // Trim whitespace
                });

                // Check if the response is OK (status code 200)
                if (response.ok) {
                    const isTaken = await response.json(); // Get the response as JSON (boolean)
                    // console.log(`Username: ${username.trim()}, IsTaken: ${isTaken}`);

                    if (isTaken) {
                        const li = document.createElement('li');
                        li.className = 'list-group-item border-0';
                        li.textContent = username; 
                        document.getElementById('already-taken').appendChild(li); 
                        // alreadyTaken.push(username.trim()); // Username is already taken
                    } else {
                        const li = document.createElement('li');
                        li.className = 'list-group-item border-0';
                        li.textContent = username; 
                        document.getElementById('available').appendChild(li); 
                        // available.push(username.trim()); // Username is available
                    }
                    usernameListText = usernameListText.replace(new RegExp(`^${username.trim()}\\s*\\n?`, 'm'), '').trim(); // Remove from the list
                    inputElement.value = usernameListText; // Update the textarea
                } else {
                    console.error('Error fetching data:', response.statusText);
                }

                //delay for 1 second
                await new Promise(resolve => setTimeout(resolve, 2000));
            }
        });


      </script>
    
    <!-- Bootstrap cdn  -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
</html>